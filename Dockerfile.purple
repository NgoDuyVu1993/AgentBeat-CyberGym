# Dockerfile for CyberGym Purple Agent
# Baseline AI-powered PoC generator using Google Gemini

FROM python:3.11-slim

LABEL maintainer="CyberGym Team"
LABEL description="Purple Agent - AI-Powered PoC Generator"
LABEL version="1.0.0"

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY scenarios/cybergym/purple_agent_prod.py .

# Create non-root user for security
RUN useradd -m -u 1000 agent && chown -R agent:agent /app
USER agent

# Expose port
EXPOSE 9031

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:9031/health || exit 1

# Environment variables (can be overridden)
ENV GOOGLE_API_KEY=""
ENV GEMINI_MODEL="gemini-2.0-flash"

# Run the Purple Agent
CMD ["python", "purple_agent_prod.py"]
