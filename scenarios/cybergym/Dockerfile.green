# Dockerfile.green - CyberGym Green Agent
# Evaluates Purple Agents on vulnerability exploitation

FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY cybergym_adapter.py .
COPY cybergym_green_agent.py .
COPY format_hints.py .

# Environment variables (can be overridden)
ENV CYBERGYM_SERVER_URL=http://localhost:8666
ENV GREEN_AGENT_PORT=9030

# Expose port
EXPOSE 9030

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:9030/ || exit 1

# Run the agent
CMD ["python", "cybergym_green_agent.py", "--port", "9030"]
