# Dockerfile.purple - CyberGym Purple Agent
# AI-powered exploit generator using Google Gemini
# FIXED: Uses 0.0.0.0 for Docker networking and port 8080 for AgentBeats

FROM python:3.12-slim

WORKDIR /app

RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY purple_agent_prod.py .
COPY format_hints.py .
COPY proven_payloads.py .

ENV HOST=0.0.0.0
ENV PORT=8080
ENV GOOGLE_API_KEY=""
ENV GEMINI_MODEL=gemini-2.0-flash

EXPOSE 8080

HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

ENTRYPOINT ["python", "purple_agent_prod.py"]
CMD []