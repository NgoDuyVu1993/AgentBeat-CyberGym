# Dockerfile.purple - CyberGym Purple Agent
# AI-powered exploit generator using Google Gemini

FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY purple_agent_prod.py .
COPY format_hints.py .

# Environment variables
ENV GOOGLE_API_KEY=""
ENV PURPLE_AGENT_PORT=9031
ENV GEMINI_MODEL=gemini-2.0-flash

# Expose port
EXPOSE 9031

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:9031/health || exit 1

# Run the agent
CMD ["python", "purple_agent_prod.py"]
